.heimu, .heimu a {
    background-color: #252525;
    color: #252525;
    text-shadow: none;
}

.heimu::selection, .heimu a::selection {
    color: #ffffff;
}

.heimu:hover, .heimu:hover a {
    transition:color .05s linear;
    color: #fff;
}

h2 {
    font-size: 2em;
}

h3 {
    font-size: 1.5em;
}

h4 {
    font-size: 1.25em;
}

h2, h3, h4, h5, h6 {
    margin-block-start: .8em;
    margin-block-end: .5em;
}